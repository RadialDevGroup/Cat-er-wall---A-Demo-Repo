<%= form_for @cat, html: { class: "uk-form uk-form-stacked" } do |f| %>
  <div class="uk-form-row">
    <%= f.label :url, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.text_field :url, class: 'uk-form-width-large' %>
    </div>
  </div>
  <div class="uk-form-row">
    <%= f.label :caption, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.text_field :caption, class: 'uk-form-width-large' %>
    </div>
  </div>

  <div class="uk-form-row">
    <button type="submit" class="uk-button uk-button-primary">Save</button>
  </div>
<% end %>
